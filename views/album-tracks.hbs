<div class="album-tracks">
    {{#each tracks}}
    <div class="tracks-card">
    <img src="{{this.images.[0].url}}">
    <h3>{{this.name}}</h3>
    <figure>
    <figcaption>Listen to {{this.name}}:</figcaption>
    <audio
        controls
        src="{{this.preview_url}}">
            Your browser does not support the
            <code>audio</code> element.
    </audio>
</figure>
    <button type="button" class="tracks"><a href="{{this.preview_url}}">Play Preview</a></button>
    </div>
    {{/each}}
</div>